{
  "name": "minus-h",
  "version": "2.0.1",
  "description": "Add help generation to APIs created with Node's util.parseArgs function",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "docs": "typedoc",
    "pretest": "tsc",
    "test": "c8 mocha",
    "preci": "tsc --inlineSourceMap",
    "ci": "c8 mocha",
    "lint": "eslint .",
    "build": "npm test && npm run lint && npm run docs && npm pack --dry-run"
  },
  "keywords": [
    "parseArgs",
    "node",
    "util",
    "help",
    "-h",
    "format",
    "word-wrap"
  ],
  "author": "Joe Hildebrand <joe-github@cursive.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hildjj/minus-h.git"
  },
  "dependencies": {
    "@cto.af/linewrap": "2.1.0"
  },
  "devDependencies": {
    "@cto.af/eslint-config": "4.1.5",
    "@types/node": "22.1.0",
    "c8": "10.1.2",
    "eslint": "9.8.0",
    "mocha": "10.7.0",
    "typedoc": "0.26.5",
    "typescript": "5.5.4",
    "typescript-eslint": "8.0.1"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20"
  }
